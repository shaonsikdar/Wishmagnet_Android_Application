<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="#cfcfcf"
        android:padding="8dp" 
        >

        <ImageView
            android:id="@+id/imageView_people"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/unmarked" />

        <TextView
            android:id="@+id/textView_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/imageView_people"
            android:text="1 People"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/imageView_seconds"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/imageView_people"
            android:scaleType="fitXY"
            android:src="@drawable/marked" />

        <TextView
            android:id="@+id/textView_seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_people"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/imageView_seconds"
            android:text="35 seconds"
            android:layout_alignBaseline="@+id/imageView_seconds"
            android:textColor="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="3dp" >

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Title"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/textView_title"
            android:text="set by "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/textView_by"
            android:layout_below="@+id/textView_title"
            android:gravity="right"
            android:text="User"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>